{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "nRF52-DK",
            "type": "gdb",
            "request": "attach",
            "executable": "${workspaceRoot}/target/thumbv7m-none-eabi/release/preemptive",
            "target": "localhost:3333",
            "remote": true,
            "cwd": "${workspaceRoot}",
            "gdbpath": "arm-none-eabi-gdb",
            "autorun": [
                "monitor reset",
                "monitor speed auto",
                "b reset_handler"
            ]
        }
    ]
}